
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled state -->
    <item
        android:drawable="@drawable/btn_default_mtrl_disabled"
        android:state_enabled="false"
        />

    <!-- hovered state -->
    <item
        android:drawable="@drawable/btn_fb_blue_mtrl_focused_hovered"
        android:state_hovered="true"
        />

    <!-- pressed state -->
    <item
        android:drawable="@drawable/btn_fb_blue_mtrl_pressed"
        android:state_pressed="true"
        />

    <!-- focused state -->
    <item
        android:drawable="@drawable/btn_fb_blue_mtrl_focused_hovered"
        android:state_focused="true"
        />

    <!-- normal state -->
    <item android:drawable="@drawable/btn_fb_blue_mtrl_normal" />

</selector>