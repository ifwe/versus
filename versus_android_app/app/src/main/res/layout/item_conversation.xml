<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        tools:text="12:53"
        />

    <ImageView
        android:id="@+id/conversation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        tools:src="@drawable/ic_send_24px"
        />

    <TextView
        android:id="@+id/topic_a_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/conversation_icon"
        android:layout_toEndOf="@id/conversation_icon"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:drawablePadding="16dp"
        tools:text="Hillary Clinton"
        tools:textColor="@color/sea_blue"/>

    <TextView
        android:id="@+id/vs_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/topic_a_text_view"
        android:layout_toEndOf="@id/topic_a_text_view"
        android:layout_marginTop="16dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textSize="16sp"
        android:text="@string/topic_vs"/>

    <TextView
        android:id="@+id/topic_b_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/vs_text_view"
        android:layout_toEndOf="@id/vs_text_view"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        tools:text="Donald Trump"/>

    <TextView
        android:id="@+id/subtitle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/conversation_icon"
        android:layout_toEndOf="@id/conversation_icon"
        android:layout_below="@id/topic_a_text_view"
        android:layout_marginBottom="16dp"
        android:textSize="12sp"
        tools:text="Waiting for opponent..."/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/slate"
        android:layout_below="@id/subtitle_text_view"
        />

</RelativeLayout>