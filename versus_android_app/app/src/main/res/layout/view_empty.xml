<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/empty_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="32dp"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="@string/empty_view_no_conversations_active"
        />

    <ImageView
        android:id="@+id/empty_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/empty_text_view"
        android:layout_marginBottom="32dp"
        android:tint="@color/slate"
        tools:src="@drawable/ic_no_network"
        />

    <Button
        android:id="@+id/empty_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/empty_text_view"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        tools:text="@string/empty_view_start_conversation"
        />

    <TextView
        android:id="@+id/empty_fab_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical|end|right"
        android:textSize="@dimen/body_text_size"
        android:drawableEnd="@drawable/ic_trending_flat_24dp"
        android:drawableRight="@drawable/ic_trending_flat_24dp"
        android:drawableTint="@color/slate"
        android:drawablePadding="8dp"
        tools:text="@string/empty_view_fab_conversation_prompt"
        />

</RelativeLayout>